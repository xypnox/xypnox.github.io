---
interface Props {
  class?: string;
  element: "button" | "div" | "a";
  props?: any;
}

const props = Astro.props;

const Element = props.element || "div";
---

<Element class={props.class + " container"} {...props.props}>
  <div class="inner">
    <slot />
  </div>
</Element>

<style>
  .container {
    position: relative;
    border-radius: 2rem;
    width: max-content;
    background: transparent;
    border: none;
  }

  .container .inner {
    width: 100%;
    padding: 0.5rem 1.5rem;
    border: 1px solid transparent;
    border-radius: 2rem;
    background: radial-gradient(
      ellipse,
      #ffffff20 0%,
      #ffffff10 60%
    );
    background-size: 100% 400%;
    background-position-x: 100%;
    background-position-y: 0%;
    transition: background-position-y 0.5s, border-color 0.2s, transform 0.2s, color 0.2s;
  }

  .container .inner:hover {
    border-color: var(--surfaceUp);
    background-position-y: 50%;
  }

  .container .inner:active {
    transform: scale(0.95);
  }

</style>
