---
import Layout from "../layouts/MainLayout.astro";
import { Projects as projectsData } from "../content/projects";
import PageHeader from "../components/pageHeader.astro";
import { checkImages } from "../utils/images";

const pathToProjectImage = (project: string, path: string) =>
  `/projects/${project}/${path}`;

const projectCoverImagesRaw = projectsData
  .filter((p) => p.cover)
  .map((p) => ({
    slug: p.slug,
    path: p.cover!,
  }));

if (projectCoverImagesRaw && projectCoverImagesRaw.length > 0) {
  // We check if the asset images exist for the names defined in the data
  const projectNoImages = await checkImages(
    projectCoverImagesRaw.map((i) => pathToProjectImage(i.slug, i.path)).flat(),
  );
}

export const frontMatter = {
  title: "Projects",
  description: "A collection of projects I've worked on.",
  // cover: projectCoverImages[0],
};
---

<Layout title="Projects" meta={frontMatter}>
  <PageHeader title="Projects" />
  <div class="projectGrid">
    {
      projectsData.map((p) => (
        <a
          id={p.slug}
          href={"/project/" + p.slug}
          class="projectCard theme-card"
        >
          <img class="logo" src={p.image} alt={p.title} />
          <div>
            <img class="logo" src={p.image} alt={p.title} />
            <div class="cardContent">
              <h1>{p.title}</h1>
              {p.description.map((d) => (
                <p>{d}</p>
              ))}
            </div>
          </div>
        </a>
      ))
    }
  </div>
</Layout>

<style>
  .projectGrid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(20rem, 1fr));
    gap: 2rem;
    @media (max-width: 768px) {
      grid-template-columns: 1fr;
    }
  }

  .projectCard {
    text-decoration: none;
    color: var(--text);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 2rem;
    padding: 2rem;
    border-radius: calc(2 * var(--border-radius));
    width: 100%;
    line-height: 1.5;
    transition: all 0.5s ease-in-out;
    height: max-content;
  }

  .cardContent {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    max-width: 800px;
  }

  .projectCard img {
    width: 100%;
    max-width: 256px;
    border-radius: calc(2 * var(--border-radius));
  }

  .projectCard p,
  .projectCard h1 {
    margin: 0;
  }

  @media (max-width: 768px) {
    .projectCard {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
