---
import Layout from "../layouts/MainLayout.astro";
import { Projects as projectsData } from "../content/projects";
import PageHeader from "../components/pageHeader.astro";
import PageNav from "../components/nav/pageNav.astro";

const ProjectsWithSlug = projectsData;
---

<Layout title="Projects">
  <main>
    <div class="projectList">
      <div>
        <PageHeader title="Projects" />
        <PageNav
          links={ProjectsWithSlug.map((p) => ({
            name: p.title,
            slug: `#${p.slug}`,
          }))}
        />
      </div>
      {
        ProjectsWithSlug.map((p) => (
          <a
            id={p.slug}
            href={"/project/" + p.slug}
            class="projectCard theme-card"
          >
            <img src={p.image} alt={p.title} />
            <div class="cardContent">
              <h1>{p.title}</h1>
              {p.description.map((d) => (
                <p>{d}</p>
              ))}
            </div>
          </a>
        ))
      }
    </div>
  </main>
</Layout>

<style>
  .projectList {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .projectCard {
    text-decoration: none;
    color: var(--text);
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    gap: 2rem;
    padding: 2rem;
    border-radius: calc(2 * var(--border-radius));
    width: 100%;
    line-height: 1.5;
    transition: all 0.5s ease-in-out;
  }

  .cardContent {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    max-width: 800px;
  }

  .projectCard img {
    width: 100%;
    max-width: 256px;
    border-radius: calc(2 * var(--border-radius));
  }

  .projectCard p,
  .projectCard h1 {
    margin: 0;
  }


  @media (max-width: 768px) {
    .projectCard {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
