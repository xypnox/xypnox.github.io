---
import Layout from "../layouts/MainLayout.astro";
import PageHeader from "../components/pageHeader.astro";
import { Tooltip } from "../components/elements/tooltip";
import { WarehouseSolidJS } from "../components/warehouse/index";
import { MasonryText } from "../components/warehouse/masonry-text";
import { icons } from "../components/icons";
---

<Layout title="Warehouse">
  <PageHeader title="Warehouse" />

  <div class="icon-grid">
    {
      Object.entries(icons).map(([name, icon]) => (
        <div class="icon-item">
          <iconify-icon icon={icon} class="icon" />
          <span class="icon-name">{name}</span> <span class="icon-value">{icon}</span>
        </div>
      ))
    }
  </div>

  <Tooltip id="Hello" client:only>
    Hello <div slot="tooltip">world</div>
  </Tooltip>
  <Tooltip id="Hello" placement="right" client:only>
    <div>DivHello</div>
    <div slot="tooltip">world</div>
  </Tooltip>
  <Tooltip id="Hello" placement="right" client:only>
    <button>DivHello</button>
    <div slot="tooltip">world</div>
  </Tooltip>

  <Tooltip id="Hello" placement="bottom" client:only>
    <h1>HelloH1</h1>
    <div slot="tooltip">world</div>
  </Tooltip>
  <MasonryText client:only />
  <WarehouseSolidJS client:load />
</Layout>

<style>
  .icon-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(6rem, 1fr));
    gap: 1rem;
    margin: 2rem 0;
    background-color: var(--surface);
    padding: 2rem;
  }

  .icon-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .icon {
    font-size: 3rem;
  }
  .icon-name {
    font-size: 1rem;
  }
  .icon-value {
    font-size: 0.7rem;
  }
</style>
