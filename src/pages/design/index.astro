---
import Layout from "../../layouts/MainLayout.astro";

const designSections = [
  {
    name: "Covers",
    image: "/design-covers/covers.webp",
    slug: "/design/covers/",
  },
  { name: "Logos", image: "/design-covers/logos.webp", slug: "/design/logos/" },
  { name: "Prototypes", image: "/design-covers/proto.webp", slug: "/design/prototypes/" },
  {
    name: "Posters",
    image: "/design-covers/posters.webp",
    slug: "https://posters.xypnox.com",
  },
  {
    name: "Blag Posts",
    image: "/design-covers/exp.webp",
    slug: "/blag/tags/design/",
  },
];
---

<Layout title="Design">
  <div class="design-sections">
    <div>
      <h1 class="page-title">Des<br />ign</h1>
    </div>
    {
      designSections.map((d) => (
        <a href={d.slug}>
          <img src={d.image} />
          <span class="text-gradient-fx">{d.name}</span>
        </a>
      ))
    }
  </div>
  <div class="notice">
    For design related services contact via <a href="https://x5z.studio"
      >x5z.studio</a
    >
  </div>
</Layout>

<style>
  .design-sections {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    justify-items: center;
    gap: 2rem;
    width: 100%;
    max-width: 1400px;
    margin: 4rem auto;
  }

  @media (max-width: 600px) {
    .design-sections {
      grid-template-columns: 1fr;
    }
  }

  .design-sections .page-title {
    font-size: calc(min(100vw, 1000px) / 6);
    text-shadow: 0.2rem 0.2rem 0.4rem var(--secondary-color);
    color: var(--background);
    width: 100%;
  }

  .design-sections > a {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: var(--font-size-xl);
    background: var(--background);
    border: 1px solid var(--border-color);
    color: var(--heading);
    border-radius: calc(var(--border-radius) * 2);
    gap: 0.5rem;
    padding-bottom: 1rem;
    text-decoration: none;
    flex-shrink: 0;
  }

  .design-sections > a:hover {
    color: var(--primary-color);
    border-color: var(--primary-color);
  }

  .design-sections img {
    width: 100%;
    height: 100%;
    max-height: 600px;
    max-width: 600px;
    border-radius: calc(var(--border-radius) * 2);
  }

  .notice {
    margin-top: 4rem;
    padding: 1rem;
    text-align: center;
  }
</style>
