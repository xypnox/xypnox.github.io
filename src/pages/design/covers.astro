---
import Layout from "../../layouts/MainLayout.astro";
import { CDNCovers as coversData } from "../../data/coverData";
import { ImageCollage } from "../../components/imageGrid";
import PageHeader from "../../components/pageHeader.astro";
import PageNav from "../../components/nav/pageNav.astro";
import { checkImages, optimizeImages } from "../../utils/images";

const covers = coversData.map((cover) => ({
  ...cover,
  slug: cover.name.toLowerCase().replace(" ", "-"),
  covers: cover.covers.map((cover) => ({
    name: cover.replace(".png", ""),
    path: `/covers/${cover}`,
  })),
}));

const coversWithNoImage = await checkImages(
  covers.map((col) => col.covers.map((c) => c.path)).flat(),
);

if (coversWithNoImage.length > 0) {
  console.log(JSON.stringify({ coversWithNoImage }, null, 2));
  throw new Error(
    `Not all images exist in glob: "src/assets/covers/*.{jpeg,jpg,png,gif}"`,
  );
}
const collagesRaw = covers.map((col) => ({
  title: col.name,
  description: col.description,
  id: col.slug,
  images: col.covers.map((cov) => ({
    path: '../assets' + cov.path,
    title: cov.name,
    alt: cov.name,
  })),
}));

// For each of collages, generate thumbnails

const thumbnails: string[] = collagesRaw.reduce(
  (p, col, i) => [
    ...p,
    ...col.images.reduce((p2, img) => [...p2, img.path], [] as string[]),
  ],
  [] as string[],
);

// console.log({ thumbnails });

const opImgs = await optimizeImages(thumbnails);

const collages = collagesRaw.map((col) => ({
  ...col,
  images: col.images.map((img) => ({
    ...img,
    image: opImgs[img.path],
  })),
}));
---

<Layout title="Covers">
  <PageHeader title="Covers" />
  <PageNav
    links={covers.map((col) => ({
      name: `${col.name} - ${col.covers.length}`,
      slug: `#${col.slug}`,
    }))}
  />
  <ImageCollage client:load collages={collages} />
</Layout>

<style>
  .covers-nav {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    margin: 2rem 0;
    gap: 1rem;
  }
</style>
