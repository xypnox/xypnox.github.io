---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import Layout from "../../../layouts/MainLayout.astro";
import Toc from "../../../components/Toc.astro";
import Tag from "../../../components/nav/Tag.astro";
import { blogStaticPaths } from "../../../lib/dataAstro";

interface Props {
  entry: CollectionEntry<"blog">;
  entryList: {
    slug: string;
    data: any;
  }[];
}

export async function getStaticPaths() {
  return blogStaticPaths
}

// 2. When it's time to render, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content, headings } = await entry.render();


const dateFormatOption = {
  day: "numeric",
  month: "long",
  year: "numeric",
} as const;
---

<Layout
  showLoading={false}
  title={entry.data.title}
  meta={{
    description: entry.data.description,
    image: entry.data.socialImage?.src ?? entry.data.coverImage?.src ?? "/filler.png",
    type: "article",
    tags: entry.data.tags,
  }}
>
  <link
    slot="head"
    href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&display=swap"
    rel="stylesheet"
  />
  <div class="postHeading">
    <h1 class="text-gradient-fx">{entry.data.title}</h1>
    {
      entry.data.description && (
        <p class="description">{entry.data.description}</p>
      )
    }
    <div class="details">
      <time datetime={entry.data.date.toISOString()}>
        {entry.data.date.toLocaleDateString("en-US", dateFormatOption)}
      </time>
      {
        entry.data.tags && (
          <>
            <span class="separator">‚Ä¢</span>
            <div class="tags">
              {entry.data.tags.map((tag: string) => (
                <Tag tag={tag} />
              ))}
            </div>
          </>
        )
      }
    </div>
  </div>
  {
    entry.data.coverImage && (
      <div class="coverImage">
        <Image
          alt={entry.data.coverAlt ?? "Cover Image"}
          src={entry.data.coverImage}
        />
        {entry.data.coverAlt && <p>{entry.data.coverAlt}</p>}
      </div>
    )
  }
  <div class="content-wrapper">
    <div class="content">
      {
        entry.data.hidden && (
          <blockquote class="hidden-post theme-card">
            <p>
              <strong><span>üîí</span> This is a Hidden Post</strong>
            </p>
            <p>
              If you have landed here, wow! This may also be a draft, share feedback, <a href="/#contact-and-links">reachout to me!</a>
            </p>
          </blockquote>
        )
      }
      <Content />
      <div class="end-marker">
        ‚ù¶
        <p>Sooner or later, everything ends.</p>
      </div>
      <h2>Comments</h2>
      <script
        is:inline
        src="https://utteranc.es/client.js"
        repo="xypnox/blag_zola"
        issue-term="pathname"
        label="comments"
        theme="photon-dark"
        crossorigin="anonymous"
        async></script>
    </div>
    {
      headings.length > 0 && (
        <div class="content-toc">
          <Toc headings={headings} />
        </div>
      )
    }
  </div>
</Layout>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&display=swap");
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .postHeading {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 800px;
    margin: 0 auto;
    margin-top: 4rem;
    margin-bottom: 2rem;
  }

  .postHeading h1,
  .postHeading p {
    margin: 0;
  }
  .postHeading h1 {
    font-size: var(--font-size-xxl);
    color: var(--heading);
  }

  .postHeading .description {
    font-size: var(--font-size-md);
    color: var(--text);
  }

  .content-wrapper {
    display: flex;
    flex-direction: row;
    gap: 2rem;
    max-width: var(--layout-content-wide);
    margin: 0 auto;
  }

  .content-toc {
    position: sticky;
    top: 4rem;
    height: max-content;
    max-height: 80vh;
    overflow-y: auto;
    margin: 1rem auto;
    border-radius: var(--border-radius);
    border: var(--card-border);
  }

  .content {
    display: flex;
    flex-direction: column;
    max-width: var(--layout-content-main);
    width: 100%;
    margin: 0 auto;
    line-height: 1.5;
    font-size: 1.2rem;
  }

  blockquote.hidden-post {
    margin: 2rem 0;
    padding: 1rem 2rem;
    border-left: 4px var(--border-style) var(--secondary-color);
  }

  .details {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    color: var(--fadeText);
    gap: 1rem;
  }

  .coverImage {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto 4rem;
  }

  .coverImage img {
    width: 100%;
    height: auto;
  }

  .coverImage p {
    text-align: center;
    color: var(--fadeText);
    max-width: 800px;
    margin: 0 auto;
    line-height: 2;
  }

  .end-marker {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: var(--font-size-xl);
    color: var(--fadeText);
    margin: 4rem 0;
    padding: 2rem 0;
    border-top: 2px var(--border-style) var(--border-color);
    border-bottom: 2px var(--border-style) var(--border-color);
  }
  .end-marker p {
    margin: 0;
    font-style: italic;
    font-size: var(--font-size-lg);
  }

  @media (max-width: 1200px) {
    .content-wrapper {
      flex-direction: column-reverse;
    }
    .content-toc {
      top: 0rem;
      width: 100%;
      max-width: 800px;
      position: relative;
    }
    .content {
      font-size: 1rem;
    }
  }

  @media (max-width: 390px) {
    .details {
      flex-wrap: wrap;
    }

    .separator {
      display: none;
    }
  }
</style>
